{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/backend/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/backend",
        "main": "packages/backend/src/index.ts",
        "tsConfig": "packages/backend/tsconfig.lib.json",
        "assets": ["packages/backend/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs backend {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/backend/jest.config.ts"
      }
    },
    "release": {
      "executor": "nx-release:build-update-publish",
      "options": {
        "libName": "backend"
      }
    },
    "killports": {
      "executor": "nx:run-commands",
      "options": { "command": "kill-port --port 9001,9002,9003,9004,9005,9006" }
    },
    "terminalTabEmulators": {
      "executor": "nx:run-commands",
      "options": { "command": "npx ttab -t 'Firebase Emulators' npx firebase emulators:start --project test" }
    }
  },
  "tags": []
}
